{% extends 'UsuarioBundle:Default:base.html.twig' %}

{% block body %}

<div id="contenedor">
 <!--Header-->
<div id="header">
 <!--logo-->
<div id="logo">
<ul>
<li id="superior"> Bienvenido a </li>
<li id="principal"> People</li>
<li id="inferior"> Expresate, comparte y conoce</li>
</ul>
</div> <!--Finlogo-->

 <!--Login-->
<div id="login">
    <h2 class="box-title">Identificarse</h2>
    <form class="form-login" action="{{ path('check_login') }}" method="post">
      <div class="u-form-group">
        <input type="text" name="nombre" placeholder="Usuario"/>
      </div>
      <div class="u-form-group">
      <input type="checkbox" checked >No cerrar sesi&oacute;n </input>
      </div>
      <div class="u-form-group">
        <input type="password" name="password" placeholder="Contrase&ntilde;a"/>
      </div>
        <div class="u-form-group">
        <a> Recuperar Contrase&ntilde;a</a>
      </div>
      
      <div class="u-form-group">
        <button>Entrar</button>
      </div>
     
    </form>
   
  </div> <!-- fin Login-->
 
 <!--Registro-->
<div id="register">
    <h2 class="box-title">Registrese</h2>
    <form class="form-login" action="{{ path('check_register') }}" method="post">
      <div class="u-form-group">
        <input type="text" name="nombre" placeholder="Nombre completo"/>
      </div>
      <div class="u-form-group">
        <input type="email" name="correo" placeholder="Correo electr&oacutenico"/>
      </div>
        <div class="u-form-group">
        <input type="password" name="password" placeholder="Password"/>
      </div>
      
      <div class="u-form-group">
        <button>Registrarse</button>
      </div>
   </form>

</div> <!--fin Registro-->

<!--filter-->

<div id="filter">
<select class="selectpicker">
